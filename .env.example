# Storage Configuration
# Options: "memory" (default) or "turso"
STORAGE_TYPE=memory

# Maximum logs to store (0 = unlimited for turso, 1000 default for memory)
MAX_LOGS=1000

# Turso Configuration (required if STORAGE_TYPE=turso)
# Get these from https://turso.tech/dashboard
TURSO_DATABASE_URL=libsql://your-database-url.turso.io
TURSO_AUTH_TOKEN=your-auth-token-here

# Authentication (optional)
AUTH_ENABLED=false
API_KEYS=key1,key2,key3

# Security Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
MAX_BODY_SIZE=2097152
MAX_JSON_SIZE=2097152
MAX_TEXT_SIZE=2097152
MAX_TIMEOUT_SECONDS=60
MAX_CONCURRENT_TIMEOUT_REQUESTS=10
